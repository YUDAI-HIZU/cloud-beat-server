# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time
scalar Upload
scalar Email

directive @authentication on FIELD_DEFINITION

type User {
  id: ID!
  uid: String!
  displayName: String!
  createdAt: Time!
  updatedAt: Time!
}

type Query {
  user(id: ID!): User
  currentUser: User! @authentication
}

input SignUpInput {
  displayName: String!
  uid: String!
}

type Mutation {
  signUp(input: SignUpInput!): Boolean
}
